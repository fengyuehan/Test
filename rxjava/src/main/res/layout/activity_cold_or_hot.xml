<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <Button
        android:id="@+id/btn_cold"
        android:text="Cold Observable"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    <Button
        android:id="@+id/btn_cold_change_hot"
        android:text="Cold Observable change Hot Observable"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    <Button
        android:id="@+id/btn_hot"
        android:text="Hot Observable"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    <Button
        android:id="@+id/btn_hot_change_cold"
        android:text="Hot Observable  change Cold Observable"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
</LinearLayout>