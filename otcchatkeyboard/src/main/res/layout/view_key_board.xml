<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#ffffff"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/shape_chat_bg">

        <com.example.otcchatkeyboard.OtcEditText
            android:id="@+id/et_chat"
            android:layout_width="280dp"
            android:maxHeight="100dp"
            android:textSize="14sp"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:layout_centerVertical="true"
            android:layout_marginLeft="18dp"
            android:layout_marginTop="15dp"
            android:layout_marginBottom="15dp"
            android:paddingTop="13dp"
            android:paddingBottom="13dp"
            android:background="@drawable/shape_chat_box_bg"
            android:paddingLeft="19dp" />

        <ImageView
            android:id="@+id/iv_multi_and_send"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="18dp"
            android:background="@drawable/shape_add_bg"
            android:src="@drawable/icon_add" />
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="#cfcfcf"
        />

    <com.example.otcchatkeyboard.FuncLayout
        android:id="@+id/ly_kvml"
        android:visibility="gone"
        android:gravity="center_vertical"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
</LinearLayout>