<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <Button
        android:id="@+id/btn_show_fragment1"
        android:text="显示Fragment1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    <Button
        android:id="@+id/btn_show_fragment2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="显示Fragment2"/>
    <Button
        android:id="@+id/btn_remove_fragment1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="移除Fragment1"/>
    <Button
        android:id="@+id/btn_remove_fragment2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="移除Fragment2"/>

    <Button
        android:id="@+id/btn_replace_fragment"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="replace  fragment"/>
    <Button
        android:id="@+id/btn_jump"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="跳转"/>
    <FrameLayout
        android:id="@+id/fragment_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>

</LinearLayout>