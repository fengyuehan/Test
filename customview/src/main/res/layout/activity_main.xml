<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">
    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <Button
                android:id="@+id/btn"
                android:text="color"

                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
            <Button
                android:id="@+id/btn_linear_shader"
                android:text="linear_shader"
                android:layout_marginTop="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
            <Button
                android:id="@+id/btn_radial_shader"
                android:text="RadialGradien"
                android:layout_marginTop="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
            <Button
                android:id="@+id/btn_sweep_shader"
                android:text="SweepGradient"
                android:layout_marginTop="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
            <Button
                android:id="@+id/btn_bitmap_shader"
                android:text="BitmapGradient"
                android:layout_marginTop="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
            <Button
                android:id="@+id/btn_color_filter"
                android:text="ColorFilter"
                android:layout_marginTop="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
            <Button
                android:id="@+id/btn_lock_view"
                android:text="LockView"
                android:layout_marginTop="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
            <Button
                android:id="@+id/btn_wave_view"
                android:text="WaveView"
                android:layout_marginTop="10dp"
                android:layout_width="match_parent"
                android:layout_height="44dp"/>
            <Button
                android:id="@+id/btn_ruler_view"
                android:text="RulerView"
                android:layout_marginTop="10dp"
                android:layout_width="match_parent"
                android:layout_height="44dp"/>
            <Button
                android:id="@+id/btn_scroll"
                android:text="scroll的相关问题"
                android:layout_marginTop="10dp"
                android:layout_width="match_parent"
                android:layout_height="44dp"/>
            <Button
                android:id="@+id/btn_cloud"
                android:text="仿网易云音乐音轨跳动效果"
                android:layout_marginTop="10dp"
                android:layout_width="match_parent"
                android:layout_height="44dp"/>
            <Button
                android:id="@+id/btn_dot"
                android:text="recyclerview指示器"
                android:layout_marginTop="10dp"
                android:layout_width="match_parent"
                android:layout_height="44dp"/>
            <Button
                android:id="@+id/btn_text"
                android:text="自定义指示器"
                android:layout_marginTop="10dp"
                android:layout_width="match_parent"
                android:layout_height="44dp"/>
            <Button
                android:id="@+id/btn_draw_text"
                android:text="drawText分析"
                android:layout_marginTop="10dp"
                android:layout_width="match_parent"
                android:layout_height="44dp"/>
            <Button
                android:id="@+id/btn_draw_more_text"
                android:text="draw更多的文字"
                android:layout_marginTop="10dp"
                android:layout_width="match_parent"
                android:layout_height="44dp"/>
            <Button
                android:id="@+id/btn_lock_screen"
                android:text="滑动解锁"
                android:layout_marginTop="10dp"
                android:layout_width="match_parent"
                android:layout_height="44dp"/>
            <Button
                android:id="@+id/btn_red_envelopes"
                android:text="红包"
                android:layout_marginTop="10dp"
                android:layout_width="match_parent"
                android:layout_height="44dp"/>
            <Button
                android:id="@+id/btn_image_autentication"
                android:text="图片验证"
                android:layout_marginTop="10dp"
                android:layout_width="match_parent"
                android:layout_height="44dp"/>
            <Button
                android:id="@+id/btn_travel_people"
                android:text="旅行人数"
                android:layout_marginTop="10dp"
                android:layout_width="match_parent"
                android:layout_height="44dp"/>
            <Button
                android:id="@+id/btn_canvas"
                android:text="Canvas状态保存和恢复"
                android:layout_marginTop="10dp"
                android:layout_width="match_parent"
                android:layout_height="44dp"/>
            <Button
                android:id="@+id/btn_ship"
                android:text="乘风破浪的小船"
                android:layout_marginTop="10dp"
                android:layout_width="match_parent"
                android:layout_height="44dp"/>
            <Button
                android:id="@+id/btn_matrix"
                android:text="matrix的使用"
                android:layout_marginTop="10dp"
                android:layout_width="match_parent"
                android:layout_height="44dp"/>
            <Button
                android:id="@+id/btn_pen"
                android:text="画笔"
                android:layout_marginTop="10dp"
                android:layout_width="match_parent"
                android:layout_height="44dp"/>
            <Button
                android:id="@+id/btn_mosaic"
                android:text="马赛克"
                android:layout_marginTop="10dp"
                android:layout_width="match_parent"
                android:layout_height="44dp"/>
            <Button
                android:id="@+id/btn_gua"
                android:text="刮刮乐"
                android:layout_marginTop="10dp"
                android:layout_width="match_parent"
                android:layout_height="44dp"/>
            <Button
                android:id="@+id/btn_shape"
                android:text="Shpe"
                android:layout_marginTop="10dp"
                android:layout_width="match_parent"
                android:layout_height="44dp"/>
            <Button
                android:id="@+id/btn_fermode"
                android:text="fermode"
                android:layout_marginTop="10dp"
                android:layout_width="match_parent"
                android:layout_height="44dp"/>
            <Button
                android:id="@+id/btn_invalidate"
                android:text="invalidate"
                android:layout_marginTop="10dp"
                android:layout_width="match_parent"
                android:layout_height="44dp"/>
            <Button
                android:id="@+id/btn_requestlayout"
                android:text="invalidate与requestlayout测试"
                android:layout_marginTop="10dp"
                android:layout_width="match_parent"
                android:layout_height="44dp"/>
        </LinearLayout>
    </androidx.core.widget.NestedScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>