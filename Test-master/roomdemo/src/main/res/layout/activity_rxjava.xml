<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:android="http://schemas.android.com/apk/res/android">
    <data>
        <variable
            name="onClickListener"
            type="android.view.View.OnClickListener" />
    </data>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center_horizontal"
            android:orientation="vertical">




            <Button
                android:id="@+id/btn_insert_completable"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="30dp"
                android:onClick="@{onClickListener}"
                android:text="插入数据 -- Completable"
                android:textAllCaps="false"
                />
            <Button
                android:id="@+id/btn_insert_single"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:onClick="@{onClickListener}"
                android:text="插入数据 -- Single"
                android:textAllCaps="false"
                />

            <Button
                android:id="@+id/btn_insert_maybe"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:onClick="@{onClickListener}"
                android:text="插入数据 -- Maybe"
                android:textAllCaps="false"
                />

            <Button
                android:id="@+id/btn_with_livedata"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="50dp"
                android:onClick="@{onClickListener}"
                android:text="Room配合LiveData使用"
                android:textAllCaps="false"
                />

        </LinearLayout>

        <TextView
            android:id="@+id/txt_all"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:text="当前狗狗总数：" />



    </RelativeLayout>
</layout>